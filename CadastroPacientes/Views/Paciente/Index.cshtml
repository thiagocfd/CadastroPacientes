@model IEnumerable<CadastroPacientes.Models.Paciente>

@{
    ViewData["Title"] = "Index";
}

<h1>Relação de pacientes</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
           
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modalidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Diagnostico)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modalidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Diagnostico)
            </td>
            
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.PacienteID  }) |
                @Html.ActionLink("Details", "Details", new {  id=item.PacienteID  }) |
                @Html.ActionLink("Delete", "Delete", new {  id=item.PacienteID  })
            </td>
        </tr>
}
    </tbody>
</table>
